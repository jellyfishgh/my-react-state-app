{
  "name": "my-react-state-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "mobx": "^3.1.16",
    "mobx-react": "^4.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "redux": "^3.7.1",
    "todomvc-app-css": "^2.1.0",
    "todomvc-common": "^1.0.3",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "flow-bin": "^0.49.1",
    "husky": "^0.14.1",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "lint-staged": "^4.0.0",
    "mobx-react-devtools": "^4.2.15",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.2",
    "pushstate-server": "^3.0.0",
    "react-scripts": "1.0.10",
    "redux-devtools": "^3.4.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "server": "pushstate-server dist",
    "prod": "npm run build && npm run server",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "flow": "flow"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --no-semi --list-different --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jellyfishgh/my-react-state-app.git"
  },
  "proxy": "http://localhost:3001/",
  "homepage": "."
}
